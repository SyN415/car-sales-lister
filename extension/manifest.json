{
  "manifest_version": 3,
  "name": "Car Sales Lister",
  "version": "1.0.0",
  "description": "Aggregate car listings from Facebook Marketplace and Craigslist with KBB price intelligence and deal alerts.",
  "permissions": [
    "scripting",
    "activeTab",
    "storage",
    "unlimitedStorage",
    "tabs",
    "alarms",
    "notifications"
  ],
  "host_permissions": [
    "*://*.facebook.com/*",
    "*://*.craigslist.org/*",
    "*://*.supabase.co/*",
    "*://*.onrender.com/*"
  ],
  "action": {
    "default_popup": "src/popup/popup.html"
  },
  "background": {
    "service_worker": "src/background/service-worker.js",
    "type": "module"
  },
  "web_accessible_resources": [
    {
      "resources": ["assets/*"],
      "matches": [
        "*://*.facebook.com/*",
        "*://*.craigslist.org/*"
      ]
    }
  ],
  "content_scripts": [
    {
      "matches": ["*://*.craigslist.org/*"],
      "css": ["src/content/overlay.css"],
      "js": ["src/content/overlay-ui.js", "src/content/craigslist-scout.js"],
      "run_at": "document_idle"
    },
    {
      "matches": ["*://*.facebook.com/marketplace/*"],
      "css": ["src/content/overlay.css"],
      "js": ["src/content/overlay-ui.js", "src/content/facebook-scout.js"],
      "run_at": "document_idle"
    }
  ],
  "icons": {
    "16": "assets/icon-16.png",
    "48": "assets/icon-48.png",
    "128": "assets/icon-128.png"
  }
}
